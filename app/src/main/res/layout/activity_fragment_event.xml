<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.techrupt.android.parentbuddy.ViewController.Events.Fragment.EventFragment">

    <RelativeLayout
        android:id="@+id/activity_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.techrupt.android.parentbuddy.ViewController.Events.Activity.EventActivityList">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEventName"
            android:textStyle="normal|bold"
            android:textSize="18sp"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_toRightOf="@+id/txtEventName"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_toEndOf="@+id/txtEventName"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEventDescription"
            android:layout_below="@+id/txtEventName"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEventStartDate"
            android:layout_below="@+id/txtEventDescription"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEventEndDate"
            android:layout_below="@+id/txtEventStartDate"/>

        <com.google.android.gms.maps.MapView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapView"
            android:layout_below="@+id/txtEventEndDate"/>

    </RelativeLayout>

</FrameLayout>
